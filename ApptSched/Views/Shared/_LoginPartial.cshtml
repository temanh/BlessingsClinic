@using ApptSched.Models.ViewModels
@using ApptSched.Utilities
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor httpContextAccessor
@inject Microsoft.AspNetCore.Identity.SignInManager<ApptSched.Models.ViewModels.ApplicationUser> signInManager
@if (signInManager.IsSignedIn(User))
{
    <form method="post" id="logoutForm" asp-action="LogOff" asp-controller="Account">
        <ul class="nav navbar-nav justify-content-center navbar-collapse dropdown-menu-left">
            <li class=" nav-link font-weight-bold text-white">Hello, @httpContextAccessor.HttpContext.Session.GetString("userName")! </li>
            <a class="nav-link text-white font-weight-bold nav-link" id="loginLink" asp-controller="Home" asp-action="Index">Home</a>
            <a class="nav-link text-white font-weight-bold" id="aboutLink" asp-controller="Home" asp-action="About">About</a>
            <a class="nav-link text-white font-weight-bold" id="loginLink" asp-controller="Appt" asp-action="Index">Schedule Appointment</a>
            <li><a class="font-weight-bold text-white nav-link" href="javascript:document.getElementById('logoutForm').submit()">Log Off</a></li>
        </ul>
    </form>

}
else
{
    <ul class="nav navbar-nav justify-content-center navbar-collapse dropdown-menu-left mr-2 ">
        <li>
            <a class="nav-link text-white font-weight-bold" id="loginLink" asp-controller="Home" asp-action="Index">Home</a>
            @*<li>@Html.ActionLink("Sign In","Login", "Account", routeValues:null,htmlAttributes: new {id="loginLink"})</li> HTML HELPERS*@
        </li>
        <li>
            <a class="nav-link text-white font-weight-bold" id="aboutLink" asp-controller="Home" asp-action="About">About</a>
            @*<li>@Html.ActionLink("Sign In","Login", "Account", routeValues:null,htmlAttributes: new {id="loginLink"})</li> HTML HELPERS*@
        </li>
        <li>
            @*<li>@Html.ActionLink("Sign Up","Register", "Account", routeValues:null,htmlAttributes: new {id="registerLink"})</li>HTML HELPERS*@
            <a class="nav-link text-white font-weight-bold" id="registerLink" asp-controller="Account" asp-action="Register">Register</a>
        </li>
        <li>
            <a class="nav-link text-white font-weight-bold" id="loginLink" asp-controller="Account" asp-action="Login">Sign In</a>
            @*<li>@Html.ActionLink("Sign In","Login", "Account", routeValues:null,htmlAttributes: new {id="loginLink"})</li> HTML HELPERS*@
        </li>
    </ul>
}
