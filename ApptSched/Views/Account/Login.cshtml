@model ApptSched.Models.ViewModels.LoginModel
@{
    ViewData["Title"] = "Sign In";
}
<h2 class="text-white font-weight-bold">Sign In</h2> 
<div class="row">
    <div class="col-md-8">
        <section id="loginForm">
            <form id="account" method="post" asp-action="Login" asp-controller="Account">
                <h4 class="text-white font-weight-bold">Use your registered email id and password to login</h4>
                <hr/>
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group row text-white font-weight-bold">
                    <label class="col-md-2" asp-for="Email"></label>
                    <div class="col-md-10">
                        <input asp-for="Email" class="form-control"/>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row text-white font-weight-bold">
                    <label class="col-md-2" asp-for="Password"></label>
                    <div class="col-md-10">
                        <input asp-for="Password" class="form-control"/>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group text-white font-weight-bold">
                    <div class="col-md-10 offset-md-2 checkbox">
                        <label asp-for="RememberMe" class="pr-4 pl-0">
                            <input asp-for="RememberMe"/>
                        </label>
                        Remember Me?
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-10 offset-md-2">
                        <input type="submit" value="Log In" class="btn btn-success"/>
                    </div>
                </div>
                <p class="col-md-10 offset-md-2">
                    <a asp-action="Register">Register</a>
                </p>
            </form>

        </section>
    </div>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial"/>
}